<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script defer src="/js/bundle.js"></script>
    <link rel="stylesheet" href="/styles/output.css" />
    <title>Calendar practice</title>
  </head>
  <body class="text-gray-600">
    <!-- Page layout -->
    <div class="flex">
      <!-- Nav container -->
      <div class="bg-slate-700/90 h-screen w-1/6 relative">
        <!-- container for navigation and logo -->
        <div
          class="p-4 pt-6 flex flex-col space-y-3 items-center text-slate-200 text-xl"
        >
          <div class="mb-20 text-2xl font-medium">LOGO.inc</div>
          <div class="flex flex-col">
            <a href="/home">Home</a>
            <div class="border-b border-slate-200 mx-3 mt-1"></div>
          </div>

          <div class="flex flex-col">
            <a>Classes</a>
            <div class="border-b border-slate-200 mx-3 mt-1"></div>
          </div>

          <div class="flex flex-col">
            <a href="/students">Students</a>
            <div class="border-b border-slate-200 mx-3 mt-1"></div>
          </div>

          <div class="flex flex-col">
            <a href="/teachers">Teachers</a>
            <div class="border-b border-slate-200 mx-3 mt-1"></div>
          </div>
        </div>

        <!-- footer part -->
        <aside
          class="absolute bottom-7 left-10 text-slate-100 font-thin text-sm"
        >
          <div class="flex flex-col">
            <div>Copyright &copy; 2024, LOGO.inc</div>
            <div>Made by Antonio Blašković</div>
          </div>
        </aside>
      </div>

      <!-- Workspace container -->
      <div class="bg-slate-200 h-screen w-full pt-10">
        <!-- Workspace title -->
        <div class="flex flex-col justify-center items-center">
          <h1 class="text-6xl font-medium">View Classes</h1>
          <button
            id="add-class-btn"
            class="my-10 bg-slate-700/80 text-slate-100 py-1 px-4 rounded-lg text-xl font-medium shadow-lg"
          >
            Add Class
          </button>
          <div id="add-class-dropdown" class="p-4 mb-5 hidden">
            <form
              action="/event"
              method="POST"
              class="flex space-x-4 items-center"
            >
              <label for="title">Class name:</label>
              <input
                required
                id="title"
                class="rounded-lg bg-slate-50 px-2"
                name="title"
                type="text"
              />
              <label for="start_time">Start time:</label>
              <input
                id="start_time"
                required
                class="rounded-lg bg-slate-50 px-2"
                name="start_time"
                type="datetime-local"
              />
              <label for="end_time">End time:</label>
              <input
                id="end_time"
                required
                class="rounded-lg bg-slate-50 px-2"
                name="end_time"
                type="datetime-local"
              />
              <input
                class="bg-slate-700/80 text-slate-100 py-1 px-4 rounded-lg font-medium shadow-lg"
                type="submit"
                value="Add"
              />
            </form>
          </div>
        </div>

        <!-- calendar -->
        <div class="flex justify-center items-center">
          <div
            class="bg-slate-300 max-w-5xl flex-1 p-4 rounded-xl shadow-2xl"
            id="calendar"
          ></div>
        </div>
      </div>
    </div>

    <!-- form -->
    <!-- <div class="flex justify-center mt-5 pb-20">
      
    </div> -->

    <script>
      const addClassBtn = document.getElementById("add-class-btn");
      addClassBtn.addEventListener("click", () => {
        document
          .getElementById("add-class-dropdown")
          .classList.toggle("hidden");

        if (
          document
            .getElementById("add-class-dropdown")
            .classList.contains("hidden")
        ) {
          addClassBtn.textContent = "Add Class";
        } else {
          addClassBtn.textContent = "Close";
        }
      });
    </script>
  </body>
</html>
